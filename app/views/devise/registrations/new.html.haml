.legend_u Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  = display_base_errors resource
  .form-inputs
    = f.input :username, required: true, input_html: { class: 'medium-field' }, autofocus: true
    = f.input :email,    required: true, input_html: { class: 'large-field'  }
    = f.input :password, required: true, input_html: { class: 'medium-field' }
    = f.input :password_confirmation, required: true, input_html: { class: 'medium-field' }
  .form-actions
    = f.button :submit, 'Sign up', class: 'btn-primary'

= render "devise/shared/links"
