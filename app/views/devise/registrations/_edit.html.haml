.legend_u
  Edit #{resource_name.to_s.humanize}

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :username,              input_html: { class:  'medium-field' }, :required => true, :autofocus => true
  = f.input :email,                 input_html: { class:  'large-field' },  :required => true
  = f.input :password,              input_html: { class:  'small-field' },  :required => false, :autocomplete => "off", :hint => "leave it blank if you don't want to change it"
  = f.input :password_confirmation, input_html: { class:  'small-field' },  :required => false
  = f.input :current_password,      input_html: { class:  'small-field' },  :required => true,  :hint => "we need your current password to confirm your changes"
  = f.button :submit, 'Update', :class => 'btn-primary'

%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.

