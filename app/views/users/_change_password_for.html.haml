= simple_form_for(@user, url: do_change_password_for_user_path(@user), remote: true, html: { method: :post }) do |f|
  %legend= "Change Password for #{@user.username}"
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: 'New Password', required: true, input_html: { class:  'medium-field' }
    = f.input :password_confirmation, label: 'Password Confirmation', required: true, input_html: { class:  'medium-field' }
  .form-actions
    = f.button :submit, 'Change Password'

= remote_link_to 'Users', users_path