= simple_form_for([@organisation, @person], remote: true) do |f|
  = f.error_notification

  .form-inputs
    = f.input :first_name, :input_html => { :class => 'large-field' }, autofocus: true
    = f.input :last_name,  :input_html => { :class => 'large-field' }
    = f.input :email,      :input_html => { :class => 'medium-field' }
    = f.input :phone,      :input_html => { :class => 'small-field' }

  .form-actions
    = f.button :submit
